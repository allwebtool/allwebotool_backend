datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  from_where     String
  username       String         @unique
  email          String         @unique
  role           Int            @default(2002) //2002 - User, 1985 - Moderator, 5150 - Admin    
  hash           String
  otp_token      String?
  rtHash         RtHash[]
  status         String         @default("active")
  email_verified Boolean        @default(false)
  cardToken String?
  lastDigit Int?

  videos         Video[]
  notifications  Notification[]
  transactions Transaction[]
  tts VoiceClone[]


  @@map("users")
  FaceEditor FaceEditor[]
  ImageEditor ImageEditor[]
}

model RtHash {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  rtHash String

  @@map("rthashs")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  userId    String   @db.ObjectId
  message   String
  url       String?
  seen      Boolean? @default(false)

  user User @relation(fields: [userId], references: [id])

  @@map("notifications")
}

model Transaction {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  refId     String?
  amount    Float    
  type      Transtype
  status    Statustype
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt 
  points    Float   
   
  user User @relation(fields: [userId], references: [id])


  @@map("transactions")
}

model Video {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   @db.ObjectId

  status       Statustype  @default(initiated)
  taskId       String
  videoUrl     String?
  audioUrl     String?
  resultUrl    String?
  thumbnailUrl String?

  // Add other fields as needed

  user User @relation(fields: [userId], references: [id])

  @@map("videos")
}


  model VoiceClone {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    voiceId    String   @unique
    userId      String  @db.ObjectId
    resultUrl  String?
    status       Statustype  @default(initiated)
    

    user User @relation(fields: [userId], references: [id])
  }

  model FaceEditor {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    
    faceId    String?   @unique
    userId      String  @db.ObjectId
    action        String
    mainImageUrl  String
    faceImageUrl  String?
    resultUrl  String?
    status       Statustype  @default(initiated)
    

    user User @relation(fields: [userId], references: [id])
  }

  model ImageEditor {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
    imageId    String? @unique
    userId      String  @db.ObjectId
    firstImageUrl     String?
    secondImageUrl     String?
    resultUrl  String?
    status       Statustype  @default(initiated)
    

    user User @relation(fields: [userId], references: [id])
  }

enum Transtype {
  credit
  debit
}
enum Statustype {
  initiated
  failed
  successful
}